<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Line?>

<!-- ReplyReclamation.fxml -->
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="gui.Admin.ReplyReclamationController"
            style="-fx-background-color: #FFFFFF;">

    <VBox spacing="25" alignment="TOP_CENTER"
          AnchorPane.topAnchor="30"
          AnchorPane.leftAnchor="30"
          AnchorPane.rightAnchor="30"
          AnchorPane.bottomAnchor="30">

        <!-- Header Section -->
        <VBox alignment="CENTER" spacing="15"
              style="-fx-background-color: rgba(255,255,255,0.05);
                     -fx-background-radius: 15;
                     -fx-padding: 25;
                     -fx-border-color: rgba(255,255,255,0.1);
                     -fx-border-width: 2;
                     -fx-border-radius: 15;">
            <Label text="RÉPONDRE À LA RÉCLAMATION"
                   style="-fx-font-size: 28px;
                          -fx-font-weight: 800;
                          -fx-text-fill: #00E676;"/>
            <Line endX="350" strokeWidth="2"
                  style="-fx-stroke: #00E676;"/>
        </VBox>

        <!-- Reply Form -->
        <TextArea fx:id="taReply" promptText="Écrivez votre réponse ici..."
                  style="-fx-pref-height: 200;
                         -fx-control-inner-background: #FFFFFFF;
                         -fx-text-fill: #ffffff;
                         -fx-font-size: 14px;
                         -fx-border-radius: 8;
                         -fx-background-radius: 8;
                         -fx-border-color: #00E676;
                         -fx-focus-color: transparent;
                         -fx-prompt-text-fill: #8a9db3;"/>

        <!-- Status Selection -->
        <VBox spacing="15">
            <Label text="CHANGER LE STATUT:" style="-fx-font-size: 12px; -fx-text-fill: #ffffff; -fx-font-weight: 700;"/>
            <HBox spacing="20">
                <RadioButton fx:id="rbResolved" text="RÉSOLU"
                             style="-fx-text-fill: #00E676;
                                  -fx-font-weight: 800;
                                  -fx-font-size: 14px;"/>
                <RadioButton fx:id="rbRejected" text="REJETÉ"
                             style="-fx-text-fill: #FF5252;
                                  -fx-font-weight: 800;
                                  -fx-font-size: 14px;"/>
            </HBox>
        </VBox>

        <!-- Submit and Cancel Buttons -->
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 15 0 0 0;">
            <Button fx:id="btnSubmit" text="SOUMETTRE" onAction="#handleSubmit"
                    style="-fx-background-color: #00E676;
                           -fx-text-fill: #000000;
                           -fx-font-weight: 800;
                           -fx-padding: 12 35;
                           -fx-background-radius: 30;"/>
            <Button fx:id="btnRetour" text="ANNULER" onAction="#handleRetour"
                    style="-fx-background-color: rgba(255,255,255,0.1);
                           -fx-text-fill: #8a9db3;
                           -fx-font-weight: 800;
                           -fx-padding: 12 35;
                           -fx-background-radius: 30;
                           -fx-border-color: #8a9db3;
                           -fx-border-width: 2;
                           -fx-border-radius: 30;"/>
        </HBox>
    </VBox>
</AnchorPane>
