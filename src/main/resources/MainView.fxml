<?xml version="1.0" encoding="UTF-8"?>

<!-- 
    Vue principale de l'application
    Contient la barre de navigation latérale et la zone de contenu principal
-->

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="services.MainViewController"
           fx:id="mainContent"
           stylesheets="@styles/bolt-style.css">
    
    <!-- Menu latéral -->
    <left>
        <VBox styleClass="sidebar" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Button text="Annonces" onAction="#showAnnonces" styleClass="nav-button"/>
            <Button text="Trajets" onAction="#showTrajets" styleClass="nav-button"/>
            <Button text="Ajouter Annonce" onAction="#showAjouterAnnonce" styleClass="nav-button"/>
            <Button text="Ajouter Trajet" onAction="#showAjouterTrajet" styleClass="nav-button"/>
            <Button text="Réservations (Chauffeur)" onAction="#showReservationsChauffeur" styleClass="nav-button"/>
            <Button text="Réservations (Passager)" onAction="#showReservationsPassager" styleClass="nav-button"/>
        </VBox>
    </left>
    
    <!-- Zone de contenu principal -->
    <center>
        <VBox styleClass="main-container">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </VBox>
    </center>
    
</BorderPane>
