<?xml version="1.0" encoding="UTF-8"?>

<!-- 
    Vue principale de l'application
    Contient la barre de navigation latérale et la zone de contenu principal
-->

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<HBox xmlns="http://javafx.com/javafx/21.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="services.MainViewController"
      stylesheets="@styles/bolt-style.css"
      styleClass="main-container">

    <!-- Menu latéral -->
    <VBox styleClass="sidebar">
        <Button text="Annonces" 
                onAction="#showAnnonces"
                styleClass="nav-button">
            <graphic>
                <Region styleClass="icon-annonces"/>
            </graphic>
        </Button>
        
        <Button text="Trajets" 
                onAction="#showTrajets"
                styleClass="nav-button">
            <graphic>
                <Region styleClass="icon-trajets"/>
            </graphic>
        </Button>
        
        <Button text="Ajouter Annonce" 
                onAction="#showAjouterAnnonce"
                styleClass="nav-button">
            <graphic>
                <Region styleClass="icon-add"/>
            </graphic>
        </Button>
        
        <Button text="Ajouter Trajet" 
                onAction="#showAjouterTrajet"
                styleClass="nav-button">
            <graphic>
                <Region styleClass="icon-add"/>
            </graphic>
        </Button>
        
        <Button text="Mes Réservations" 
                onAction="#showReservations"
                styleClass="nav-button">
            <graphic>
                <Region styleClass="icon-reservations"/>
            </graphic>
        </Button>
    </VBox>

    <!-- Contenu principal -->
    <VBox fx:id="mainContent" HBox.hgrow="ALWAYS" styleClass="main-content"/>
</HBox>
