<?xml version="1.0" encoding="UTF-8"?>

<!-- 
    Vue de modification d'un trajet
    Permet de modifier les détails d'un trajet existant
-->

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="services.Trajet.ModifierTrajetController"
      stylesheets="@../styles/bolt-style.css"
      styleClass="main-container"
      prefWidth="600"
      prefHeight="600">

    <!-- Conteneur du formulaire -->
    <VBox styleClass="form-container">
        <!-- Titre du formulaire -->
        <Label text="Modifier le trajet" styleClass="header-title"/>
        
        <!-- Champ Titre -->
        <VBox styleClass="form-field">
            <Label text="Titre" styleClass="label-title"/>
            <TextField fx:id="titreField" promptText="Titre du trajet"/>
        </VBox>

        <!-- Champ Point de départ -->
        <VBox styleClass="form-field">
            <Label text="Point de départ" styleClass="label-title"/>
            <TextField fx:id="departurePointField" promptText="Point de départ"/>
        </VBox>

        <!-- Champ Point d'arrivée -->
        <VBox styleClass="form-field">
            <Label text="Point d'arrivée" styleClass="label-title"/>
            <TextField fx:id="arrivalPointField" promptText="Point d'arrivée"/>
        </VBox>

        <!-- Champ Date de départ -->
        <VBox styleClass="form-field">
            <Label text="Date de départ" styleClass="label-title"/>
            <DatePicker fx:id="departureDatePicker"/>
        </VBox>

        <!-- Champ Nombre de places -->
        <VBox styleClass="form-field">
            <Label text="Nombre de places" styleClass="label-title"/>
            <TextField fx:id="availableSeatsField" promptText="Nombre de places"/>
        </VBox>

        <!-- Champ Prix -->
        <VBox styleClass="form-field">
            <Label text="Prix" styleClass="label-title"/>
            <TextField fx:id="priceField" promptText="Prix en DT"/>
        </VBox>

        <!-- Boutons d'action -->
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Annuler" onAction="#annuler" styleClass="button-secondary"/>
            <Button text="Enregistrer" onAction="#modifierTrajet" styleClass="button-primary"/>
        </HBox>
    </VBox>
</VBox> 