<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<!-- 
    Vue principale des trajets
    Affiche la liste des trajets disponibles avec options de gestion
-->
<VBox xmlns="http://javafx.com/javafx/21.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="services.Trajet.TrajetController"
      styleClass="main-container"
      prefWidth="800"
      prefHeight="600">

    <HBox styleClass="header-container">
        <Label text="Liste des Trajets" styleClass="header-title"/>
    </HBox>

    <ListView fx:id="trajetListView" VBox.vgrow="ALWAYS"/>

    <HBox styleClass="header-container" alignment="CENTER_RIGHT">
        <Button text="Ajouter Trajet" 
                onAction="#ajouterTrajet"
                styleClass="button-primary"/>
    </HBox>
</VBox>
