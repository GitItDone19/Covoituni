<?xml version="1.0" encoding="UTF-8"?>

<!-- 
    Vue d'ajout d'un nouveau trajet
    Permet aux utilisateurs de créer un nouveau trajet dans le système
-->

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="services.Trajet.AjouterTrajetController"
      stylesheets="@../styles/bolt-style.css"
      styleClass="main-container"
      prefWidth="600"
      prefHeight="600">

    <!-- Conteneur principal du formulaire -->
    <VBox styleClass="form-container">
        <!-- En-tête du formulaire -->
        <Label text="Ajouter un nouveau trajet" styleClass="header-title"/>
        
        <!-- Champ pour le titre -->
        <VBox styleClass="form-field">
            <Label text="Titre" styleClass="label-title"/>
            <TextField fx:id="titreField" promptText="Titre du trajet"/>
        </VBox>

        <!-- Points de départ et d'arrivée -->
        <VBox styleClass="form-field">
            <Label text="Point de départ" styleClass="label-title"/>
            <TextField fx:id="departurePointField" promptText="Point de départ"/>
        </VBox>

        <VBox styleClass="form-field">
            <Label text="Point d'arrivée" styleClass="label-title"/>
            <TextField fx:id="arrivalPointField" promptText="Point d'arrivée"/>
        </VBox>

        <!-- Date et heure de départ -->
        <VBox styleClass="form-field">
            <Label text="Date de départ" styleClass="label-title"/>
            <DatePicker fx:id="departureDatePicker" promptText="Date de départ"/>
        </VBox>

        <!-- Informations supplémentaires -->
        <VBox styleClass="form-field">
            <Label text="Nombre de places" styleClass="label-title"/>
            <TextField fx:id="availableSeatsField" promptText="Nombre de places disponibles"/>
        </VBox>

        <VBox styleClass="form-field">
            <Label text="Prix" styleClass="label-title"/>
            <TextField fx:id="priceField" promptText="Prix en DT"/>
        </VBox>

        <!-- Boutons d'action -->
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Annuler" onAction="#annuler" styleClass="button-secondary"/>
            <Button text="Ajouter" onAction="#ajouterTrajet" styleClass="button-primary"/>
        </HBox>
    </VBox>
</VBox>
