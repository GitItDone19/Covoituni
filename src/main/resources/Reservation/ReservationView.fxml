<?xml version="1.0" encoding="UTF-8"?>

<!-- 
    Vue des réservations
    Affiche la liste des réservations de l'utilisateur avec leurs détails
-->

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="services.Reservation.ReservationController"
      stylesheets="@../styles/bolt-style.css"
      styleClass="main-container"
      spacing="10"
      prefWidth="800"
      prefHeight="600">

    <!-- En-tête de la page -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Mes Réservations" styleClass="header-title"/>

    <!-- Liste des réservations -->
    <ListView fx:id="reservationListView" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets top="20"/>
        </VBox.margin>
    </ListView>
</VBox> 