<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.Users.AjouterCategorie"
      spacing="20"
      style="-fx-background-color: white;">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="Nouvelle CatÃ©gorie" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

    <VBox spacing="15">
        <VBox spacing="5">
            <Label text="Nom" style="-fx-text-fill: #555555; -fx-font-weight: bold;"/>
            <TextField fx:id="nomField" style="-fx-background-color: #F7F7F7; -fx-border-color: #EEEEEE; -fx-border-radius: 5;"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Description" style="-fx-text-fill: #555555; -fx-font-weight: bold;"/>
            <TextArea fx:id="descriptionField"
                      prefRowCount="3"
                      wrapText="true"
                      style="-fx-background-color: #F7F7F7; -fx-border-color: #EEEEEE; -fx-border-radius: 5;"/>
        </VBox>
    </VBox>

    <HBox spacing="15" alignment="CENTER_RIGHT">
        <padding>
            <Insets top="20"/>
        </padding>
        <Button text="Annuler"
                onAction="#handleAnnulerButton"
                style="-fx-background-color: #EEEEEE; -fx-text-fill: #333333; -fx-background-radius: 5;"/>
        <Button text="Ajouter"
                onAction="#handleAjouterButton"
                defaultButton="true"
                style="-fx-background-color: #34D186; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
    </HBox>
</VBox>