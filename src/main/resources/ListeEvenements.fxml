<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" stylesheets="/styles/styles.css"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.Admin.ListeEvenementsController">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox alignment="CENTER_RIGHT">
        <Button text="Nouvel Événement" 
                onAction="#handleNouvelEvent"
                styleClass="button-primary"/>
    </HBox>

    <Label text="Liste des Événements" styleClass="title"/>
    
    <ListView fx:id="eventListView" 
              VBox.vgrow="ALWAYS"
              styleClass="list-view"/>
</VBox> 