<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_LEFT" spacing="20" style="-fx-background-color: #FFFFFF;"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.Reclamation.AjouterReclamation">
    
    <padding>
        <Insets top="20" right="40" bottom="20" left="40"/>
    </padding>
    
    <Label text="Nouvelle Réclamation" style="-fx-text-fill: #4CAF50; -fx-font-size: 24;"/>
    
    <VBox spacing="10">
        <Label text="Description" style="-fx-text-fill: white;"/>
        <TextArea fx:id="descriptionArea" 
                 promptText="Décrivez votre problème..." 
                 prefWidth="1000" 
                 prefHeight="400" 
                 wrapText="true"
                 style="-fx-background-color: #2E2E2E; -fx-text-fill: black; -fx-prompt-text-fill: #808080; -fx-border-color: #4CAF50; -fx-border-radius: 5;"/>
    </VBox>
    
    <HBox spacing="15" alignment="CENTER">
        <Button onAction="#ajouter" 
                text="Soumettre la réclamation" 
                prefWidth="200"
                prefHeight="40"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5;"/>
        <Button onAction="#afficherReclamations" 
                text="Retour au menu" 
                prefWidth="200"
                prefHeight="40"
                style="-fx-background-color: #666666; -fx-text-fill: white; -fx-background-radius: 5;"/>
    </HBox>
</VBox> 