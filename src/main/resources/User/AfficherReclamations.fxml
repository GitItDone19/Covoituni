<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" 
      stylesheets="@../styles.css"
      prefWidth="1200.0"
      prefHeight="800.0"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="gui.Reclamation.AfficherReclamations"
      style="-fx-background-color: #1E1E1E;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Label text="Mes Réclamations" 
               style="-fx-font-size: 24; -fx-text-fill: white;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Nouvelle Réclamation" 
                onAction="#retourAjout"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>

    <!-- Liste des réclamations -->
    <ListView fx:id="listView" VBox.vgrow="ALWAYS"
              style="-fx-background-color: transparent; -fx-control-inner-background: #1E1E1E;"/>

</VBox> 