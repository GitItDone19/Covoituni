<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="main.controllers.ModifierEventController">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Modifier l'événement" style="-fx-font-size: 20px;"/>

    <GridPane vgap="10" hgap="10">
        <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nomField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        
        <Label text="Date:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dateField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        
        <Label text="Heure:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="heureField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        
        <Label text="Lieu:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="lieuField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        
        <Label text="Type:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="typeCombo" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        
        <Label text="Description:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextArea fx:id="descriptionArea" GridPane.rowIndex="5" GridPane.columnIndex="1"
                  wrapText="true" prefRowCount="3"/>
    </GridPane>
    
    <HBox spacing="10" alignment="CENTER">
        <Button text="Annuler" onAction="#handleCancel"/>
        <Button text="Enregistrer" onAction="#handleSave" defaultButton="true"/>
    </HBox>
    
</VBox> 