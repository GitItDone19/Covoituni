<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.Users.AjoutAnnonceController">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Publier une annonce" style="-fx-font-size: 20px;"/>

    <TextField fx:id="titreField" promptText="Titre"/>
    
    <TextArea fx:id="descriptionArea" promptText="Description détaillée" 
              wrapText="true" prefRowCount="3"/>
    
    <ComboBox fx:id="trajetCombo" promptText="Sélectionner un trajet"/>
    
    <Spinner fx:id="seatsSpinner" editable="true"/>
    
    <ComboBox fx:id="carCombo" promptText="Sélectionner une voiture"/>
    
    <ComboBox fx:id="eventComboBox" promptText="Sélectionner un événement (optionnel)"/>
    
    <HBox spacing="10" alignment="CENTER">
        <Button text="Annuler" onAction="#handleCancel"/>
        <Button text="Publier" onAction="#handlePublish" defaultButton="true"/>
    </HBox>
    
</VBox> 