<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox styleClass="content-container" spacing="20" xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.Users.HistoriqueController">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Add Back Button -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Button text="← Retour" onAction="#handleReturnToDashboard" 
                styleClass="button-secondary"/>
        <Label text="Historique des Annonces" styleClass="header-title"/>
    </HBox>

    <ListView fx:id="historiqueListView" VBox.vgrow="ALWAYS"/>

</VBox> 