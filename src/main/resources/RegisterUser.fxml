<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" stylesheets="@styles/global.css" 
            style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="gui.RegisterUserController">
            
    <HBox AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <!-- Left Side - Form -->
        <VBox alignment="CENTER" spacing="20" HBox.hgrow="ALWAYS" style="-fx-background-color: white;">
            <padding>
                <Insets top="40" right="50" bottom="40" left="50"/>
            </padding>
            
            <Label text="Create Account" styleClass="title-label"/>
            
            <GridPane vgap="10" hgap="10">
                <TextField fx:id="tfNom" promptText="Nom" GridPane.rowIndex="0"/>
                <TextField fx:id="tfPrenom" promptText="Prénom" GridPane.rowIndex="1"/>
                <TextField fx:id="tfTel" promptText="Téléphone" GridPane.rowIndex="2"/>
                <TextField fx:id="tfEmail" promptText="Email" GridPane.rowIndex="3"/>
                <PasswordField fx:id="tfMdp" promptText="Mot de passe" GridPane.rowIndex="4"/>
                <PasswordField fx:id="tfConfirmMdp" promptText="Confirmer mot de passe" GridPane.rowIndex="5"/>
                <ComboBox fx:id="cbRole" promptText="Rôle" GridPane.rowIndex="6"/>
            </GridPane>
            
            <Button fx:id="btnRegister" text="CREATE ACCOUNT" onAction="#handleRegister"
                    maxWidth="Infinity" defaultButton="true" styleClass="button-primary"/>
            
            <HBox alignment="CENTER" spacing="10">
                <Label text="Already have an account?"/>
                <Button fx:id="btnBack" text="Login" onAction="#handleBack"
                        styleClass="button-secondary"/>
            </HBox>
        </VBox>
        
        <!-- Right Side - Image -->
        <VBox style="-fx-background-color: -fx-secondary;" HBox.hgrow="ALWAYS" alignment="CENTER">
            <ImageView fitWidth="300" preserveRatio="true">
                <Image url="@images/logo.png"/>
            </ImageView>
            <Label text="Join Our Community!" styleClass="title-label" style="-fx-text-fill: white;"/>
            <Label text="Start your journey with us" style="-fx-text-fill: -fx-light-gray;"/>
        </VBox>
    </HBox>
</AnchorPane> 