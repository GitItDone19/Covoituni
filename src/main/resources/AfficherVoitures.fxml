<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.Users.AfficherVoitures"
      spacing="20"
      style="-fx-background-color: white;">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Button to add a new car -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <padding>
            <Insets bottom="20"/>
        </padding>
        <Button text="Ajouter une voiture"
                onAction="#handleAjouterButton"
                style="-fx-background-color: #34D186; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
    </HBox>

    <!-- Scroll pane to display car listings -->
    <ScrollPane fitToWidth="true"
                VBox.vgrow="ALWAYS"
                style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: #EEEEEE;">
        <VBox fx:id="vboxContainer" spacing="15" style="-fx-background-color: white;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </ScrollPane>
</VBox>
