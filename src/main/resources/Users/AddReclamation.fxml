<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="gui.Users.AddReclamationController"
            style="-fx-background-color: #f5f5f5;">
    
    <VBox spacing="30" alignment="TOP_CENTER"
          AnchorPane.topAnchor="40"
          AnchorPane.leftAnchor="40"
          AnchorPane.rightAnchor="40"
          AnchorPane.bottomAnchor="40">
        
        <!-- Title Section -->
        <VBox spacing="5" alignment="CENTER">
            <Label text="Ajouter Réclamation"
                   style="-fx-font-size: 32px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #25765d;
                          -fx-font-family: 'Poppins';">
                <VBox.margin>
                    <Insets bottom="10"/>
                </VBox.margin>
            </Label>
            
            <Label fx:id="lblUserName"
                   style="-fx-font-size: 16px;
                          -fx-text-fill: #707070;
                          -fx-font-family: 'Poppins';">
                <VBox.margin>
                    <Insets bottom="20"/>
                </VBox.margin>
            </Label>
        </VBox>
        
        <!-- Form Section -->
        <VBox spacing="20" alignment="CENTER"
              style="-fx-background-color: white;
                     -fx-padding: 30;
                     -fx-background-radius: 10;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            
            <!-- Subject Field -->
            <VBox spacing="8">
                <Label text="Sujet de la réclamation"
                       style="-fx-font-size: 14px;
                              -fx-text-fill: #28444c;
                              -fx-font-weight: bold;"/>
                
                <TextField fx:id="tfSubject"
                          promptText="Entrez le sujet"
                          style="-fx-padding: 12;
                                 -fx-background-color: white;
                                 -fx-border-color: #82c4f0;
                                 -fx-border-radius: 6;
                                 -fx-background-radius: 6;
                                 -fx-font-size: 14px;
                                 -fx-prompt-text-fill: #b3b3b3;
                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 4, 0, 0, 1);"/>
            </VBox>
            
            <!-- Description Field -->
            <VBox spacing="8">
                <Label text="Description"
                       style="-fx-font-size: 14px;
                              -fx-text-fill: #28444c;
                              -fx-font-weight: bold;"/>
                
                <TextArea fx:id="taDescription"
                         promptText="Entrez la description"
                         wrapText="true"
                         prefRowCount="5"
                         style="-fx-padding: 12;
                                -fx-background-color: white;
                                -fx-border-color: #82c4f0;
                                -fx-border-radius: 6;
                                -fx-background-radius: 6;
                                -fx-font-size: 14px;
                                -fx-prompt-text-fill: #b3b3b3;
                                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 4, 0, 0, 1);"/>
            </VBox>
        </VBox>
        
        <!-- Buttons Section -->
        <HBox spacing="15" alignment="CENTER">
            <Button fx:id="btnSubmit"
                    text="Soumettre"
                    onAction="#handleSubmit"
                    style="-fx-background-color: #098f5a;
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-font-weight: bold;
                           -fx-padding: 12 30;
                           -fx-background-radius: 8;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);"
                    onMouseEntered="#handleButtonHover"
                    onMouseExited="#handleButtonExit"/>
            
            <Button fx:id="btnVoirReclamations"
                    text="Voir Réclamations"
                    onAction="#handleVoirReclamations"
                    style="-fx-background-color: #007bff;
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-font-weight: bold;
                           -fx-padding: 12 30;
                           -fx-background-radius: 8;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);"
                    onMouseEntered="#handleButtonHover"
                    onMouseExited="#handleButtonExit"/>
            
            <Button fx:id="btnRetour"
                    text="Retour"
                    onAction="#handleRetour"
                    style="-fx-background-color: #dcdcdc;
                           -fx-text-fill: #505050;
                           -fx-font-size: 14px;
                           -fx-font-weight: bold;
                           -fx-padding: 12 30;
                           -fx-background-radius: 8;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);"
                    onMouseEntered="#handleButtonHover"
                    onMouseExited="#handleButtonExit"/>
        </HBox>
    </VBox>
</AnchorPane>