<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" 
            fx:controller="gui.Users.AjouterAvisController"
            style="-fx-background-color: #f5f5f5;">
    
    <VBox spacing="30" alignment="TOP_CENTER" 
          AnchorPane.topAnchor="40" 
          AnchorPane.leftAnchor="40" 
          AnchorPane.rightAnchor="40" 
          AnchorPane.bottomAnchor="40">
        
        <!-- Title Section -->
        <Label text="Ajouter un Avis" 
               style="-fx-font-size: 32px; 
                      -fx-font-weight: bold; 
                      -fx-text-fill: #25765d;
                      -fx-font-family: 'Poppins';
                      -fx-padding: 0 0 20 0;">
            <VBox.margin>
                <Insets bottom="20"/>
            </VBox.margin>
        </Label>
        
        <!-- Driver Selection Section -->
        <VBox spacing="15" alignment="CENTER" 
              style="-fx-background-color: white;
                     -fx-padding: 30;
                     -fx-background-radius: 10;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            
            <Label text="Sélectionner un conducteur" 
                   style="-fx-font-size: 16px;
                          -fx-text-fill: #28444c;
                          -fx-font-weight: bold;"/>
            
            <ComboBox fx:id="cbConducteurs" 
                      prefWidth="300"
                      style="-fx-background-color: #82f6c9;
                             -fx-border-color: #25765d;
                             -fx-border-radius: 6;
                             -fx-background-radius: 6;
                             -fx-padding: 8;
                             -fx-font-size: 14px;
                             -fx-text-fill: #28444c;">
                <VBox.margin>
                    <Insets top="10"/>
                </VBox.margin>
            </ComboBox>
        </VBox>
        
        <!-- Rating Section -->
        <VBox spacing="15" alignment="CENTER"
              style="-fx-background-color: white;
                     -fx-padding: 30;
                     -fx-background-radius: 10;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            
            <Label text="Noter votre expérience" 
                   style="-fx-font-size: 16px;
                          -fx-text-fill: #28444c;
                          -fx-font-weight: bold;"/>
            
            <!-- Stars Container (Keeping original implementation) -->
            <HBox fx:id="starsContainer" spacing="10" alignment="CENTER">
                <ImageView fx:id="star1" fitHeight="40" fitWidth="40" onMouseClicked="#handleStarClick">
                    <Image url="/images/emptystar.png"/>
                </ImageView>
                <ImageView fx:id="star2" fitHeight="40" fitWidth="40" onMouseClicked="#handleStarClick">
                    <Image url="/images/emptystar.png"/>
                </ImageView>
                <ImageView fx:id="star3" fitHeight="40" fitWidth="40" onMouseClicked="#handleStarClick">
                    <Image url="/images/emptystar.png"/>
                </ImageView>
                <ImageView fx:id="star4" fitHeight="40" fitWidth="40" onMouseClicked="#handleStarClick">
                    <Image url="/images/emptystar.png"/>
                </ImageView>
                <ImageView fx:id="star5" fitHeight="40" fitWidth="40" onMouseClicked="#handleStarClick">
                    <Image url="/images/emptystar.png"/>
                </ImageView>
            </HBox>
        </VBox>
        
        <!-- Buttons Section -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="btnSubmit" 
                    text="Soumettre" 
                    onAction="#handleSubmit" 
                    style="-fx-background-color: #24f0a0;
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-font-weight: bold;
                           -fx-padding: 12 30;
                           -fx-background-radius: 8;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);"
                    onMouseEntered="#handleButtonHover"
                    onMouseExited="#handleButtonExit"/>
            
            <Button fx:id="btnRetour" 
                    text="Retour" 
                    onAction="#handleRetour" 
                    style="-fx-background-color: #25765d;
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-font-weight: bold;
                           -fx-padding: 12 30;
                           -fx-background-radius: 8;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);"
                    onMouseEntered="#handleButtonHover"
                    onMouseExited="#handleButtonExit"/>
        </HBox>
    </VBox>
</AnchorPane> 