<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Line?>

<!-- DetailReclamation.fxml -->
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.Users.DetailReclamationController"
      spacing="20"
      style="-fx-background-color: white;">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <!-- Header Section -->
    <VBox alignment="CENTER" spacing="10">
        <Label text="Détails de la Réclamation"
               style="-fx-font-size: 24px;
                      -fx-font-weight: bold;
                      -fx-text-fill: #333333;"/>
        <Line endX="350" strokeWidth="1"
              style="-fx-stroke: #EEEEEE;"/>
    </VBox>

    <!-- Reclamation Details -->
    <VBox spacing="15" style="-fx-background-color: #F7F7F7;
                             -fx-padding: 20;
                             -fx-background-radius: 5;
                             -fx-border-color: #EEEEEE;
                             -fx-border-width: 1;
                             -fx-border-radius: 5;">
        <Label text="Sujet" style="-fx-font-weight: bold; -fx-text-fill: #555555; -fx-font-size: 14px;"/>
        <Label fx:id="lblSubject" style="-fx-text-fill: #333333; -fx-font-size: 16px; -fx-font-weight: bold;"/>

        <Label text="Description" style="-fx-font-weight: bold; -fx-text-fill: #555555; -fx-font-size: 14px; -fx-padding: 10 0 0 0;"/>
        <TextArea fx:id="taDescription" editable="false" wrapText="true"
                  style="-fx-pref-height: 150;
                        -fx-background-color: white;
                        -fx-text-fill: #333333;
                        -fx-font-size: 14px;
                        -fx-border-radius: 5;
                        -fx-background-radius: 5;
                        -fx-border-color: #EEEEEE;"/>

        <HBox spacing="30" alignment="CENTER_LEFT">
            <VBox>
                <Label text="Statut" style="-fx-font-weight: bold; -fx-text-fill: #555555; -fx-font-size: 14px;"/>
                <Label fx:id="lblStatus" style="-fx-text-fill: #34D186; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            </VBox>
            <VBox>
                <Label text="Réponse" style="-fx-font-weight: bold; -fx-text-fill: #555555; -fx-font-size: 14px;"/>
                <Label fx:id="lblReply" style="-fx-text-fill: #333333; -fx-font-size: 14px;"/>
            </VBox>
        </HBox>
    </VBox>

    <!-- Footer with Return Button -->
    <HBox alignment="CENTER">
        <Button fx:id="btnRetour"
                text="Retour"
                onAction="#handleRetour"
                style="-fx-background-color: #34D186;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-font-size: 14px;
                       -fx-padding: 10 30;
                       -fx-background-radius: 5;"/>
    </HBox>
</VBox>