<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<!-- 
    Vue de modification d'une annonce
    Permet de modifier les détails d'une annonce existante
-->
<VBox xmlns="http://javafx.com/javafx/21.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="services.Annonce.ModifierAnnonceController"
      stylesheets="@../styles/bolt-style.css"
      styleClass="main-container"
      spacing="10">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Modifier l'annonce" styleClass="header-title"/>
    
    <VBox styleClass="form-field">
        <Label text="Titre" styleClass="label-title"/>
        <TextField fx:id="titreField" promptText="Titre de l'annonce"/>
    </VBox>

    <VBox styleClass="form-field">
        <Label text="Description" styleClass="label-title"/>
        <TextArea fx:id="descriptionField" promptText="Description de l'annonce" prefRowCount="3"/>
    </VBox>

    <VBox styleClass="form-field">
        <Label text="Driver ID" styleClass="label-title"/>
        <TextField fx:id="driverIdField" promptText="ID du conducteur"/>
    </VBox>

    <VBox styleClass="form-field">
        <Label text="Car ID" styleClass="label-title"/>
        <TextField fx:id="carIdField" promptText="ID de la voiture"/>
    </VBox>

    <VBox styleClass="form-field">
        <Label text="Trajet" styleClass="label-title"/>
        <ComboBox fx:id="trajetComboBox" promptText="Sélectionner un trajet" maxWidth="Infinity"/>
    </VBox>

    <VBox styleClass="form-field">
        <Label text="Status" styleClass="label-title"/>
        <ComboBox fx:id="statusComboBox" promptText="Sélectionner un statut" maxWidth="Infinity"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Annuler" onAction="#annuler" styleClass="button-secondary"/>
        <Button text="Enregistrer" onAction="#modifierAnnonce" styleClass="button-primary"/>
    </HBox>
</VBox> 