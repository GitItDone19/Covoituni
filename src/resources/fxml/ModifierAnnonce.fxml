<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" stylesheets="@../styles/styles.css"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="main.controllers.ModifierAnnonceController"
      styleClass="container">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Modifier l'annonce" styleClass="title"/>

    <GridPane vgap="15" hgap="15" styleClass="form-grid">
        <columnConstraints>
            <ColumnConstraints minWidth="100" prefWidth="150"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <!-- Titre -->
        <Label text="Titre:" styleClass="form-label" 
               GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="titreField" styleClass="form-field"
                  promptText="Entrez le titre de l'annonce"
                  GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        
        <!-- Description -->
        <Label text="Description:" styleClass="form-label"
               GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextArea fx:id="descriptionArea" styleClass="form-field"
                  promptText="Décrivez votre annonce en détail"
                  wrapText="true" prefRowCount="4"
                  GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        
        <!-- Trajet -->
        <Label text="Trajet:" styleClass="form-label"
               GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="trajetCombo" styleClass="form-field"
                  promptText="Sélectionnez un trajet"
                  maxWidth="Infinity"
                  GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        
        <!-- Places disponibles -->
        <Label text="Places:" styleClass="form-label"
               GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Spinner fx:id="seatsSpinner" styleClass="form-field"
                 maxWidth="150"
                 GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        
        <!-- Événement -->
        <Label text="Événement:" styleClass="form-label"
               GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ComboBox fx:id="eventComboBox" styleClass="form-field"
                  promptText="Associer à un événement (optionnel)"
                  maxWidth="Infinity"
                  GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Boutons -->
    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="Annuler" 
                onAction="#handleCancel"
                styleClass="button-secondary"/>
        <Button text="Enregistrer" 
                onAction="#handleSave"
                styleClass="button-primary"
                defaultButton="true"/>
    </HBox>
</VBox> 